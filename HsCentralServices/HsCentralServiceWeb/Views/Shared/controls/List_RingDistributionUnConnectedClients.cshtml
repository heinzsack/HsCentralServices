@using System
@using HsCentralServiceWeb._sys
@using HsCentralServiceWeb._sys.hubs.webManagement
@using HsCentralServiceWeb._sys._extensions._razorExtensions
@{
	CsAjaxForm csAjaxForm;
}
@using (csAjaxForm = Ajax.Cs().Form("Partial_UnConnectedClients", "Ring", null))
{
	<div class="col-md-12">
		<h2>
			Disconnected Clients
		</h2>
		<table class="table table-striped table-sm table-responsive table-hover">
			<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Model
				</th>
			</tr>
			</thead>
			@foreach (var pc in Sys.Hubs.RingDistribution.DisconnectedClients.Select(x => x.RemoteUser.RemoteComputer).Distinct())
			{
				<tr>
					<td>@pc.Name</td>
					<td>@pc.Model</td>
				</tr>
			}
		</table>
	</div>
}
@WwwSurferNotificationHub.Attach_ComputerConnectionChanged(csAjaxForm.Id)

@using System
@using JetBrains.Annotations
@{
	@functions {

		public bool IsActive([AspMvcAction]string action, [AspMvcController]string controller)
		{
			return ViewContext.RouteData.Values["Action"].Equals(action) && ViewContext.RouteData.Values["Controller"].Equals(controller);
		}

	}
}

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - HsCentralServices</title>
	<link rel="stylesheet" href="~/Content/Css/GlyphIcons.css"/>
	@Styles.Render("~/bundles/defaultCss")
	@Scripts.Render("~/bundles/defaultScripts")
	@* ReSharper disable once Html.PathError *@
	<script src="~/signalr/hubs"></script>
</head>
<body>
	<nav class="navbar navbar-fixed-top navbar-dark bg-inverse" style="z-index: 999999">
		<a class="navbar-brand" href="#">Central - Services</a>
		<ul class="nav navbar-nav">
			<li class="nav-item@(IsActive("Service", "Ring")?" active":"")">
				<a class="nav-link" href="@Url.Action("Service", "Ring")">RingDistribution</a>
			</li>
			<li class="nav-item@(IsActive("", "")?" active":"")">
				<a class="nav-link" href="#">Management</a>
			</li>
			<li class="nav-item@(IsActive("", "")?" active":"")">
				<a class="nav-link" href="@Url.Action("Clear", "RingDistribution")">Clear</a>
			</li>
		</ul>
	</nav>
	
	

<div class="container" style="margin-top: 70px;">
	@RenderBody()
	<hr/>
	<footer>
		<p>&copy; @DateTime.Now.Year - HsCentralServices</p>
	</footer>
</div>

</body>
</html>

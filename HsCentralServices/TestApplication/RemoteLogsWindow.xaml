<CsWindow x:Class="TestApplication.RemoteLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApplication"
        xmlns:components="clr-namespace:CsWpfBase.Global.remote.services.logging.components;assembly=CsWpfBase"
        mc:Ignorable="d"
        Title="RemoteLogs Tester" Width="350" Padding="10" FooterVisibility="Collapsed" SizeToContent="Height">
	<EditorGrid>
		<EnumEditor x:Name="Severity" Header="Severity" EnumType="{x:Type components:RemoteLog+Severitys}" Value="{x:Static components:RemoteLog+Severitys.Information}"/>
		<StringEditor x:Name="Title" Header="Title" Value="Testeintrag" />
		<StringEditor x:Name="Content" Header="Content" Value="see its working" />
		<GlyphIconButton Icon="G_Send" Content="Send" Click="SendClicked" HorizontalAlignment="Right"/>
	</EditorGrid>
</CsWindow>

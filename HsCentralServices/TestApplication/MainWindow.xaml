<CsWindow x:Class="TestApplication.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="File Repository Tester" IconVisibility="Collapsed" Height="350" Width="525" Padding="20" FooterVisibility="Collapsed">
	<EditorGrid>
		<EditorGroup Header="Upload">
			<FPathEditor x:Name="FileSelector" Header="File" />
			<GlyphIconButton Icon="G_Upload" Content="Hochladen" Click="UploadClick" HorizontalAlignment="Right" />
		</EditorGroup>
		<EditorGroup Header="Download">
			<StringEditor x:Name="IdSelector" Header="ID" Validation="IdSelector_OnValidation" />
			<GlyphIconButton Icon="G_Download" Content="Download" Click="DownloadClick" HorizontalAlignment="Right" />
		</EditorGroup>
	</EditorGrid>
</CsWindow>
<CsWindow x:ClassModifier="internal" x:Class="PlayerControls.Themes.windows.FramePresenterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:themes="clr-namespace:PlayerControls.Themes"
        mc:Ignorable="d" HeaderVisibility="Collapsed" FooterVisibility="Collapsed" x:Name="Wind">
	<CsWindow.Background>
		<DrawingBrush TileMode="Tile" Viewport="0,0,60,60" ViewportUnits="Absolute" >
			<DrawingBrush.Drawing>
				<DrawingGroup>
					<GeometryDrawing Brush="White" Geometry="M5,5 L0,5 0,10 5,10 5,5 10,5 10,0 5,0 Z"/>
					<GeometryDrawing Brush="LightGray" Geometry="M0,0 L0,5 0,10 0,5, 10,5 10,10 5,10 5,0 Z"/>

				</DrawingGroup>
			</DrawingBrush.Drawing>
		</DrawingBrush>
	</CsWindow.Background>
	<Border Background="Transparent" AWindowDragMove.IsActive="True" >
		<Grid>
			<themes:FramePresenter x:Name="Presenter"  />
			<Border Background="#93000000" BorderBrush="Black" BorderThickness="2,2,0,0" Padding="5,2,5,2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
				<TextBlock Text="{Binding ElementName=Wind, Path=Title}"/>
			</Border>
		</Grid>
	</Border>
</CsWindow>

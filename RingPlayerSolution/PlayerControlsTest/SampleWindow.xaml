<Window x:Class="PlayerControlsTest.SampleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:playerControlsTest="clr-namespace:PlayerControlsTest"
        xmlns:themes="clr-namespace:PlayerControls.Themes;assembly=PlayerControls"
        mc:Ignorable="d"
        Title="SampleWindow" Height="300" Width="300">
    <Grid>
        <ItemsControl>
            <ItemsControl.Resources>
                <DataTemplate DataType="playerControlsTest:ButtonBase">
                    <Button BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                        <themes:FramePresenter Item="{Binding Path=Content}" />
                    </Button>
                </DataTemplate>
            </ItemsControl.Resources>
        </ItemsControl>
    </Grid>
</Window>
